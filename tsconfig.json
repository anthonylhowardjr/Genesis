{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@builder-factories/*": ["src/factories/builder-factories/*"],
      "@array-builders/*": ["src/builders/array-builders/*"],
      "@boolean-builders/*": ["src/builders/boolean-builders/*"],
      "@enum-builders/*": ["src/builders/enum-builders/*"],
      "@number-builders/*": ["src/builders/number-builders/*"],
      "@object-builders/*": ["src/builders/object-builders/*"],
      "@string-builders/*": ["src/builders/string-builders/*"],
      "@enums/*": ["src/enums/*"],
      "@guid/*": ["src/adapters/guid/*"],
      "@shared/*": ["src/shared/*"],
      "@globals/*": ["src/globals/*"],
      "@decorators/*": ["src/decorators/*"]
    },
    "types": [
      "jest"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": [".github", "node_modules"],
  "compileOnSave": true
}
